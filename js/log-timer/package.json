{
  "name": "log-timer",
  "version": "2.0.0",
  "description": "SealDice 插件，在使用 .log new/on/off/end/halt 命令时会提示本次跑团用时相关信息",
  "type": "module",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "repository": "https://github.com/JustAnotherID/just-another-seal-mod-repo/js/log-timer",
  "license": "MIT",
  "keywords": [
    "sealdice",
    "plugin"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production node tools/build.js",
    "build-dev": "cross-env NODE_ENV=dev node tools/build.js"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@formkit/tempo": "^0.1.2",
    "@rescript/core": "^1.5.0",
    "core-js": "^3.37.1",
    "dayjs": "^1.11.11",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.5",
    "fs-extra": "^11.2.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.8.3"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
